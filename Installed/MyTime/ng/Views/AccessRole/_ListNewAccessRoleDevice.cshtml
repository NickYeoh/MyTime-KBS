@model MyTime.ViewModels.AccessRoleViewModel

@{
    ViewBag.Title = MyTime.Resource.AccessRole + " :: " + MyTime.Resource.SelectDevice;
    Layout = null;
}


<div class="modal" tabindex="-1" role="dialog" id="modalNewDevice">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">


                    @Html.HiddenFor(model => model.AccessRoleModel.AccessRoleID, htmlAttributes: new { @id = "accessRoleID" })


                    <div class="form-group row">
                        <div class="col-md-12">

                            <table id="listNewDeviceDatatable" class="table table-striped hover" style="table-layout: fixed;">
                                <thead>
                                    <tr class="text-white header-bg-color">
                                        <th><input type="checkbox" id="selectAll"></th>
                                        <th>@MyTime.Resource.DeviceName</th>
                                        <th>@MyTime.Resource.DeviceID</th>
                                    </tr>
                                </thead>
                            </table>

                        </div>
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" id="btnAssign" class="btn btn-primary">@MyTime.Resource.Assign</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">@MyTime.Resource.Cancel</button>
            </div>
        </div>
    </div>
</div>


