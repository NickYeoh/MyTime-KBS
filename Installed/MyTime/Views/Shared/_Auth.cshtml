<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/custom-css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="css/font-awesome.min.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/ico" href=@String.Format( "Images/{0}", Session["OrganisationLogo"])>

</head>
<body>

    <div id="divSpinner" class="container">
        <div class="spinner-border text-success" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="text-center">@MyTime.Resource.ApplicationName</div>
    </div>

    <div id="divBody" class="container-fluid p-0">

        @RenderBody()

        @*<div class="row">
                <div class="col-md-9 p-0">
                    <div class="image-left-pane d-none d-sm-block">
                    </div>
                </div>
                <div id="divAjaxUpdate" class="col-md-3">
                    @RenderBody()
                </div>
            </div>*@

    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/custom-js")

    @RenderSection("scripts", required: false)
</body>
</html>
