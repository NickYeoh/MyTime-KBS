@model MyTime.ViewModels.ApproverViewModel

@{
    ViewBag.Title = MyTime.Resource.Approver + " :: " + MyTime.Resource.Detail;
    Layout = null;
}

<div class="modal-content">
    <div id="divForm" class="d-flex justify-content-center">

        <div class="card shadow" style="width:100%;">
            <div class="card-header bg-transparent">
                <h6> @ViewBag.Title </h6>
            </div>
            <div class="card-body">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-approver-tab" data-toggle="tab" href="#nav-approver" role="tab" aria-controls="nav-approver" aria-selected="true">@MyTime.Resource.Approver</a>
                        <a class="nav-item nav-link" id="nav-userlist-tab" data-toggle="tab" href="#nav-userlist" role="tab" aria-controls="nav-userlist" aria-selected="false">@MyTime.Resource.UserList</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-approver" role="tabpanel" aria-labelledby="nav-approver-tab">
                        <div class="form-horizontal">

                            <div class="form-group row pt-3">
                                @Html.LabelFor(model => model.ApproverModel.ApproverName, htmlAttributes: new { @class = "control-label col-md-12" })

                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApproverModel.ApproverName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ApproverModel.ApproverNRIC, htmlAttributes: new { @class = "control-label col-md-12" })

                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApproverModel.ApproverNRIC, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ApproverModel.DepartmentName, htmlAttributes: new { @class = "control-label col-md-12" })

                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApproverModel.DepartmentName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ApproverModel.UnitName, htmlAttributes: new { @class = "control-label col-md-12" })

                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ApproverModel.UnitName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-userlist" role="tabpanel" aria-labelledby="nav-userlist-tab">
                        <div class="row pt-3">

                            <div id="divApproverUserList" class="col-md-12">

                                <table id="listApproverUserDatatable" class="table table-striped hover" style="table-layout: fixed;">
                                    <thead>
                                        <tr class="text-white header-bg-color">
                                            <th></th>
                                            <th>@MyTime.Resource.ApproverNRIC</th>
                                            <th>@MyTime.Resource.UserName</th>
                                            <th>@MyTime.Resource.NRIC</th>
                                            <th>@MyTime.Resource.DepartmentName</th>
                                            <th>@MyTime.Resource.UnitName</th>
                                        </tr>
                                    </thead>
                                </table>


                            </div>

                        </div>

                    </div>

                    <div class="form-horizontal pt-2">
                        <div class="form-group row">
                            <div class="col-md-12 text-center">
                                <input id="btnCancel" type="button" value="@MyTime.Resource.Close" class="btn btn-primary" />

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>

</div>



