@model MyTime.Models.ReasonModel

@{
    ViewBag.Title = MyTime.Resource.Reason + " :: " + MyTime.Resource.Delete;
    Layout = null;
}

<div class="modal-content">
    <div id="divForm" class="d-flex justify-content-center">

        <div class="card shadow" style="width:496px;">
            <div class="card-header  bg-danger text-white">
                <h6> @ViewBag.Title</h6>
            </div>
            <div class="card-body">

                @using (Ajax.BeginForm(null, null, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    AllowCache = false,
                    HttpMethod = "POST",
                    OnSuccess = "onSuccessProcess",
                    UpdateTargetId = "divCRUD",
                    LoadingElementId = "divSpinner",

                },
                new { @id = "formDelete" }
                ))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <div class="form-group row">

                            @Html.LabelFor(model => model.ReasonID, htmlAttributes: new { @class = "control-label col-md-12" })

                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ReasonID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ReasonName, htmlAttributes: new { @class = "control-label col-md-12" })

                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ReasonName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-12">
                                @MyTime.Resource.ReasonFor :
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12 d-flex">
                                <div>
                                    @Html.CheckBoxFor(model => model.IsForLateIn, new { @onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsForLateIn, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="pl-2">
                                    @Html.CheckBoxFor(model => model.IsForEarlyOut, new { onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsForEarlyOut, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="pl-2">
                                    @Html.CheckBoxFor(model => model.IsForIncomplete, new { @onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsForIncomplete, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="pl-2">
                                    @Html.CheckBoxFor(model => model.IsForAbsent, new { @onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsForAbsent, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="pl-2">
                                    @Html.CheckBoxFor(model => model.IsForOnLeave, new { @onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsForOnLeave, htmlAttributes: new { @class = "control-label" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.IsActivated, htmlAttributes: new { @class = "control-label" })
                                @Html.CheckBoxFor(model => model.IsActivated, new { @onclick = "return false", htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-12 text-right">
                                <input type="submit" value="@MyTime.Resource.Delete" class="btn btn-danger" />
                                <input id="btnCancel" type="button" value="@MyTime.Resource.Cancel" class="btn btn-warning" />
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>

    </div>
</div>
