@model MyTime.ViewModels.UserViewModel

@{
    ViewBag.Title = MyTime.Resource.ContactUs;
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
}

<div id="divForm" class="d-flex justify-content-center">

    <div class="card shadow" style="width:496px;">
        <div class="card-header bg-transparent text-center">
            <h6> @ViewBag.Title </h6>
        </div>
        <div class="card-body">

            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <img src=@String.Format( "../Images/{0}", "ContactQR.png") width="150" height="150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 text-center" style="font-size:1.2em; font-weight:600">
                            MYNIX TECHNOLOGIES SDN BHD
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            No. 9-2, Jalan 10D, Taman Equine, 43300 Seri Kembangan, Selangor Darul Ehsan, Malaysia
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            @MyTime.Resource.TelephoneNo : 603–9548 0082 / 6012-306 8318
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            @MyTime.Resource.Email : admin@mynix.com.my
                        </div>

                    </div>


                    <div class="row">


                        <div class="col-md-12 text-center">
                            @MyTime.Resource.Website : www.mynix.com.my
                        </div>
                    </div>



                </div>


            </div>

            <div class="form-group row">

                <div class="col-md-12 text-center">
                    <input id="btnClose" type="button" value="@MyTime.Resource.Close" class="btn btn-primary" />
                </div>
            </div>

        </div>

    </div>

</div>


@section styles {
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css">
}

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*@Scripts.Render("~/bundles/custom-js")*@

<script type="text/javascript">

        $(document).ready(function () {

            unloadSpinner();
            showDivBody();

            $('#btnClose').on('click', function () {
                var url = '@Url.Action("Index","home")';
                window.location.href = url;
            });


        });



</script>
}




